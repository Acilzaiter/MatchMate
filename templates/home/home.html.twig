    }
    .navbar {
        position: fixed;
        width: 100%;
        height: 80px;
        top: 0;
        z-index: 1000;
        transition: top 0.3s;
        background-color: #ffffff;
        border-bottom: 1px solid #cccccc;
    }

    .navbar-logo {
        height: 100%;
    }

    .navbar-logo img {
        height: 100%;
        width: auto;
    }

    .navbar-items {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 20px;
    }

    .navbar-items li {
        margin-left: 20px;
    }

    .navbar-items img {
        margin-right: 8px;
        width: 25px;
        height: 25px;
    }

    /* Responsive navbar styles */
    @media (max-width: 768px) {
        .navbar-items {
            display: none;
            position: absolute;
            top: 60px;
            background-color: #f9f9f9;
            width: 100%;
            text-align: center;
        }

        .navbar-items.show {
            display: block;
        }

        .navbar-icons {
            display: none;
        }

        .navbar .navbar-logo {
            text-align: center;
            width: 100%;
        }

        .navbar .navbar-logo img {
            margin-left: auto;
            margin-right: auto;
            display: block;
        }
    }
</style>
