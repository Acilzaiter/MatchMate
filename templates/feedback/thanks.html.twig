    }

    .back-button {
        background-color: #3788D8;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none; /* Remove underline */
    }

    .back-button:hover {
        background-color: #155785;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 600px) {
        .success-title {
            font-size: 1.5em;
        }

        .success-message {
            font-size: 1em;
        }

        .back-button {
